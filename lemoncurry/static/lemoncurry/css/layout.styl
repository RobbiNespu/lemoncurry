@import 'base16-material-darker'

$sm =  576px
$md =  768px
$lg =  992px
$xl = 1200px

html
	background-color $base01

a
	color $base0D
	&:hover
		color $base0C

.form-control, .form-control:focus
	background-color $base01
	border-color $base00
	color $base07


[class^="openwebicons-"], [class*=" openwebicons-"]
	&::before
		text-decoration none
		line-height 1

body
	display flex
	flex-direction column
	min-height 100vh
	background-color $base00
	color $base07
	> header
		> .navbar
			background-color $base01
			#navbar
				justify-content space-between
		> .breadcrumbs
			background-color $base02
			> .breadcrumb
				background-color transparent
				border-radius 0


	> main
		margin 2rem
		flex 1
		display flex
		flex-direction column
		align-items center
		@media (min-width $md)
			flex-direction row-reverse
			align-items unset

	> footer
		display flex
		justify-content space-evenly
		margin auto 1rem
		text-align center

.card
	background-color $base02
	&.h-card
		max-width 25rem
		position sticky
		top 1rem

		.p-note
			color $base04

		.profiles
			list-style none
			text-align center
			margin 0
			padding 0
			> li
				display inline-block
				margin-right 7px
				// Special handling for http://www.kevinmarks.com/distributed-verify.html
				> svg
					margin auto 5px
